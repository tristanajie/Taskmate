<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/> <!-- Rounded corners -->
            <solid android:color="#80000000"/> <!-- Shadow color (semi-transparent black) -->
            <padding
                android:left="0dp"
                android:right="5dp"
                android:top="0dp"
                android:bottom="5dp"/>
        </shape>
    </item>

    <!-- Main Rounded Box Layer with Stroke -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/> <!-- Rounded corners -->
            <solid android:color="@color/cream"/> <!-- Background color -->
            <stroke
                android:width="0.5dp"
                android:color="@color/navy"/> <!-- Stroke with navy color and 0.5dp width -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</layer-list>
