<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <!-- View for pink rectangle at the top (header) -->
    <!-- TextView for the month-year title inside the pink header -->

    <!-- Calendar View with rounded corners below the header -->

    <!-- Section di bawah CalendarView -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="390dp"
        android:layout_height="388dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_calender"
        android:dateTextAppearance="@android:style/TextAppearance.Medium"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/navy"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutBelowCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        tools:layout_editor_absoluteX="16dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Oktober 2024"
            android:textColor="@color/navy"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- The red vertical bar -->
        <View
            android:id="@+id/redBar1"
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_rti_label2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date2"
            app:layout_constraintVertical_bias="0.284" />

        <!-- RTI Time -->
        <TextView
            android:id="@+id/tv_rti_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="RTI"
            android:textColor="@color/navy"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/redBar1"
            app:layout_constraintTop_toBottomOf="@id/tv_date2"
            app:layout_constraintVertical_bias="0.206" />

        <!-- Machine Learning Label -->
        <LinearLayout
            android:id="@+id/tv_rti_task2"
            android:layout_width="306dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.705"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/redBar1">

            <!-- Circle Shape -->
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/empty_circle" />

            <TextView
                android:id="@+id/rti_task1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Research Membuat Background"
                android:textColor="@color/navy"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_rti_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.59"
                android:textColor="@color/navy"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>