<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/cream"
    >

    <!-- Existing Views -->
    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="500dp"
        app:cardElevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_image"
            android:scaleType="centerCrop"
            android:src="@drawable/fikri" />
    </androidx.cardview.widget.CardView>

    <!-- Divider Line -->

    <TextView
        android:id="@+id/current_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="09:30"
        android:textColor="@color/light_red"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greeting_text" />

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Halo, User"
        android:textColor="@color/navy"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toEndOf="@id/imageViewProfile"
        app:layout_constraintTop_toTopOf="@id/imageViewProfile" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_time1" />

    <LinearLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <!-- Dates Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_5"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="6dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_6"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_7"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_8"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_red"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_9"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_10"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/cream"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_11"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:layout_margin="4dp"
                android:background="@drawable/circle_pink"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/cream"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Days Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Kam"
                android:textColor="@color/pink"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Jum"
                android:textColor="@color/pink"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sab"
                android:textColor="@color/pink"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Min"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sen"
                android:textColor="@color/pink"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sel"
                android:textColor="@color/pink"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rab"
                android:textColor="@color/pink"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- end of calender -->

    <!-- Information Box -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/information_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_box"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Judul Informasi -->
        <TextView
            android:id="@+id/information_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:text="INFORMASI\nBERANDA"
            android:textSize="16sp"
            android:textColor="@color/navy"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Divider Line -->
        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginVertical="6dp"
            android:background="@color/navy"
            app:layout_constraintTop_toBottomOf="@+id/information_title" />

        <!-- Teks Informasi -->
        <TextView
            android:id="@+id/information_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Beranda aplikasi menampilkan daftar tugas yang diurutkan berdasarkan tanggal tenggat waktu terdekat. Saat ditekan..."
            android:textSize="14sp"
            android:textColor="@color/navy"
            android:maxLines="3"
            android:justificationMode="inter_word"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_line" />

        <!-- Carousel Indicator -->
        <LinearLayout
            android:id="@+id/carousel_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/information_text">

            <!-- Empty Circle (not active slide) -->
            <ImageView

                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/filled_circle" />

            <!-- Filled Circle (active slide) -->
            <ImageView

                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/empty_circle" />

            <!-- Empty Circle (not active slide) -->
            <ImageView

                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/empty_circle" />

            <ImageView

                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/empty_circle" />

            <ImageView

                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/empty_circle" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- end of information box -->


    <!-- Task Box -->

    <TextView
        android:id="@+id/empty_task_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Tugas Masih Kosong :( \n Mau Mengerjakan Apa Hari Ini?"
        android:textAlignment="center"
        android:textColor="@color/navy"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/information_box"
        app:layout_constraintVertical_bias="0.341"
        tools:layout_editor_absoluteX="25dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/information_box"
        android:background="@drawable/rounded_box"
        tools:layout_editor_absoluteX="-3dp"
        tools:listitem="@layout/item_task"

        />
    <!-- end of task box -->

</androidx.constraintlayout.widget.ConstraintLayout>