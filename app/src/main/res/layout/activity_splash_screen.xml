<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".SplashActivity">

    <!-- Image for the logo -->
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="255dp"
        android:layout_height="222dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/taskmate_logo"
        app:layout_constraintBottom_toTopOf="@+id/splash_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App title -->
    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TaskMate"
        android:textSize="32sp"
        android:textColor="@color/navy"
        android:fontFamily="@font/montserrat_extrabold"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Tagline -->
    <TextView
        android:id="@+id/splash_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teman Setia Untuk\nMengorganisir Tugasmu!"
        android:textColor="@color/navy"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/splash_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>